{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "createRelease": "github",
      "message": "chore(release): publish %s",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.md",
        "**/CLAUDE.md",
        "**/AGENTS.md",
        "**/jest.config.cjs",
        "**/tsconfig*.json",
        "**/.eslintrc*",
        "**/.prettierrc*",
        ".github/**",
        "docs/**"
      ]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
