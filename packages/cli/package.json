{
  "name": "@ya-modbus/cli",
  "version": "0.7.0",
  "description": "CLI tool for testing and developing Modbus device drivers",
  "type": "module",
  "keywords": [
    "modbus",
    "cli",
    "testing",
    "driver-development"
  ],
  "bin": {
    "ya-modbus": "./dist/esm/bin/ya-modbus.js"
  },
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/esm/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/src/index.d.ts",
        "default": "./dist/esm/src/index.js"
      },
      "require": {
        "types": "./dist/cjs/src/index.d.ts",
        "default": "./dist/cjs/src/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/groupsky/ya-modbus.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/groupsky/ya-modbus/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/groupsky/ya-modbus/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "GPL-3.0-or-later",
  "author": "Geno Roupsky <185580+groupsky@users.noreply.github.com>",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:package-json",
    "build:esm": "../../node_modules/.bin/tsc -p tsconfig.esm.json",
    "build:cjs": "../../node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:package-json": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "typecheck": "../../node_modules/.bin/tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc --watch"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ya-modbus/driver-loader": "^0.7.0",
    "@ya-modbus/driver-types": "^0.7.0",
    "@ya-modbus/transport": "^0.7.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.2"
  }
}
