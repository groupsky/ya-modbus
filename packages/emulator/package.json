{
  "name": "@ya-modbus/emulator",
  "version": "0.6.0",
  "description": "Software Modbus device emulator for testing drivers without physical hardware",
  "keywords": [
    "modbus",
    "emulator",
    "testing",
    "simulation"
  ],
  "author": "Geno Roupsky <185580+groupsky@users.noreply.github.com>",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "ya-modbus-emulator": "./bin/ya-modbus-emulator.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/groupsky/ya-modbus.git",
    "directory": "packages/emulator"
  },
  "homepage": "https://github.com/groupsky/ya-modbus/tree/main/packages/emulator#readme",
  "bugs": {
    "url": "https://github.com/groupsky/ya-modbus/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:package-json",
    "clean": "rm -rf dist",
    "test": "jest",
    "build:esm": "../../node_modules/.bin/tsc -p tsconfig.esm.json",
    "build:cjs": "../../node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:package-json": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "typecheck": "../../node_modules/.bin/tsc --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "js-yaml": "^4.1.0",
    "modbus-serial": "^8.0.23"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  }
}
