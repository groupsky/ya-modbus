{
  "name": "@ya-modbus/mqtt-bridge",
  "version": "0.6.0",
  "description": "MQTT bridge for ya-modbus - orchestrates device management, polling, and MQTT publishing",
  "keywords": [
    "modbus",
    "mqtt",
    "bridge",
    "iot"
  ],
  "author": "Geno Roupsky <185580+groupsky@users.noreply.github.com>",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "bin": {
    "ya-modbus-bridge": "./dist/esm/bin/ya-modbus-bridge.js"
  },
  "main": "./dist/cjs/src/index.js",
  "types": "./dist/esm/src/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/groupsky/ya-modbus.git",
    "directory": "packages/mqtt-bridge"
  },
  "homepage": "https://github.com/groupsky/ya-modbus/tree/main/packages/mqtt-bridge#readme",
  "bugs": {
    "url": "https://github.com/groupsky/ya-modbus/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:package-json",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint .",
    "prepublishOnly": "npm run build && chmod +x dist/bin/ya-modbus-bridge.js",
    "build:esm": "../../node_modules/.bin/tsc -p tsconfig.esm.json",
    "build:cjs": "../../node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:package-json": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "typecheck": "../../node_modules/.bin/tsc --noEmit"
  },
  "dependencies": {
    "@ya-modbus/driver-loader": "^0.6.0",
    "@ya-modbus/driver-types": "^0.6.0",
    "@ya-modbus/transport": "^0.6.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "mqtt": "^5.14.1",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "aedes": "^0.51.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.2"
  },
  "module": "./dist/esm/src/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/src/index.d.ts",
        "default": "./dist/esm/src/index.js"
      },
      "require": {
        "types": "./dist/cjs/src/index.d.ts",
        "default": "./dist/cjs/src/index.js"
      }
    }
  }
}
